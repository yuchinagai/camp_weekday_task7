<h1>Edit posts</h1>
<%= form_with model: @article, local: true do |form| %>
  <p style="margin-left:10px; margin-top:30px; margin-bottom:15px">
    Title<br>
    <%= form.text_field :title, class: "form-control" %>
  </p>
  <p style="margin-left:10px; margin-top:30px; margin-bottom:15px">
    Body<br>
    <%= form.text_area :body, class: "form-control", size:"20x10" %>
  </p>
  <%= form.submit "Update", style:"color:white;", class: "btn btn-primary btn-dark col-12" %>
<% end %>